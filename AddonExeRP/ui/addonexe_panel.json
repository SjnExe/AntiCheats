{
    "namespace": "addonexe_panel_ui",

    "main_panel_screen@common.base_screen": {
        "$screen_content": "addonexe_panel_ui.main_panel_content",
        "$screen_bg_content": "common.screen_bg_content",
        "$close_on_player_hurt": false
    },

    "main_panel_content": {
        "type": "panel",
        "size": ["100%", "100%"],
        "controls": [
            { "main_panel@addonexe_panel_ui.main_panel": {} }
        ]
    },

    "main_panel": {
        "type": "panel",
        "controls": [
            {
                "dialog_bg@common.dialog_bg_template": {
                    "size": [300, 250],
                    "layer": 1
                }
            },
            {
                "title_label@common.dialog_title_label": {
                    "layer": 2,
                    "text": "#title"
                }
            },
            {
                "body_text@common.label": {
                    "layer": 2,
                    "size": ["80%", "default"],
                    "offset": [0, 15],
                    "text": "#body",
                    "color": "$body_text_color"
                }
            },
            {
                "button_panel": {
                    "type": "panel",
                    "layer": 2,
                    "size": ["100%-20px", "100%-60px"],
                    "anchor_from": "bottom_middle",
                    "anchor_to": "bottom_middle",
                    "offset": [0, -10],
                    "controls": [
                        {
                            "button_grid@addonexe_panel_ui.button_grid": {}
                        }
                    ]
                }
            },
            {
                "back_button@common.button": {
                    "layer": 2,
                    "size": [100, 20],
                    "anchor_from": "bottom_left",
                    "anchor_to": "bottom_left",
                    "offset": [10, -10],
                    "$pressed_button_name": "button.back",
                    "text": "Back"
                }
            },
            {
                "exit_button@common.button": {
                    "layer": 2,
                    "size": [100, 20],
                    "anchor_from": "bottom_right",
                    "anchor_to": "bottom_right",
                    "offset": [-10, -10],
                    "$pressed_button_name": "button.exit",
                    "text": "Exit"
                }
            }
        ]
    },

    "button_grid": {
        "type": "grid",
        "size": ["100%", "100%"],
        "grid_dimensions": [1, 6],
        "grid_rescaling_type": "horizontal",
        "collection_name": "buttons",
        "bindings": [
            {
                "binding_name": "#button_text",
                "binding_name_override": "#text"
            },
            {
                "binding_name": "#button_id",
                "binding_name_override": "$pressed_button_name"
            }
        ],
        "factory": {
            "name": "button_factory",
            "control_name": "common.button"
        }
    }
}
