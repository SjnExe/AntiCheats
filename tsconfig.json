{
  "compilerOptions": {
    // Type Checking
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    // Modules
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,

    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022"],

    // Projects
    "noEmit": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "AntiCheatsBP/scripts/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
