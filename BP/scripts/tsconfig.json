{
  "compilerOptions": {
    "target": "ES2021", // Target modern JavaScript version
    "module": "ESNext",  // Use ES module system
    "moduleResolution": "Node", // Standard module resolution
    "outDir": ".",       // Output .js files in the same directory as .ts files
    "rootDir": ".",      // Root directory for input .ts files
    "strict": true,      // Enable all strict type-checking options
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "resolveJsonModule": true, // Include modules imported with .json extension
    "skipLibCheck": true, // Skip type checking of declaration files
    // Add type roots if using specific Minecraft typings not globally installed
    // "typeRoots": ["./node_modules/@types", "./node_modules/@minecraft"]
    "types": [ // Specify type definition files to be included.
        "@minecraft/server",
        "@minecraft/server-ui"
        // "@minecraft/server-gametest" // Uncomment if using gametest features directly in scripts
    ]
  },
  "include": [
    "**/*.ts" // Compile all .ts files in the current directory and subdirectories
  ],
  "exclude": [
    "node_modules" // Exclude node_modules if it were present
  ]
}
